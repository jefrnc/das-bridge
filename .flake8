[flake8]
max-line-length = 100
extend-ignore = E203, W503, E501
exclude =
    .git,
    __pycache__,
    docs/source/conf.py,
    old,
    build,
    dist,
    .eggs,
    *.egg,
    .tox,
    .venv,
    venv,
    .pytest_cache,
    .mypy_cache,
    htmlcov,
    *.pyc,
    *.pyo,
    .env
max-complexity = 10
per-file-ignores =
    __init__.py:F401,F403
    tests/*:F401,F811
docstring-convention = google